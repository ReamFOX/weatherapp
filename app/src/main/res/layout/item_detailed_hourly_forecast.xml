<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/hourly_detailed_card_width"
    android:layout_height="@dimen/hourly_detailed_card_height"
    android:alpha="0.7"
    android:background="@drawable/card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/additional_1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hourly_time"
            style="@style/SmallTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/hourly_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cloud" />

        <TextView
            android:id="@+id/hourly_temperature"
            style="@style/SmallTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/hourly_uvindex"
            style="@style/SmallTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/hourly_solar_radiation"
            style="@style/SmallTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>